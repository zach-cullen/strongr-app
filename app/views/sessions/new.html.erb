<div class="login-page">
  <div class="grid">
    <div class="block login">
      <div class="inner-block">
        <div class="block-title">
          <h2>Welcome!</h2>
        </div>
        <div class="block-content">
          <%= form_tag(sessions_path, method: :post) do %>
            <%= label_tag(:email, "Email:") %><br>
            <%= text_field_tag :email %><br>
            <%= label_tag(:password,"Password:") %><br>
            <%= password_field_tag :password %><br>
            <%= submit_tag("Sign in", class: "btn-submit") %>
          <% end %>

          <%= link_to '/auth/google_oauth2' do %>
            <div class="btn-google-login"></div>
          <% end %>
          <br>
          <h4 style="text-align: center;">OR</h4>
          <br>
          <h5 style="text-align: center;"><%= link_to "Create an Account", :signup %></h3>
          <br>
          <% flash.each do |type, msg| %>
            <br>
            <div style="text-align: center;">
              <%= msg %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>