<h1><%= @team.name %></h1>

<h3>Workouts:</h3>

<% if current_user.is_coach? %>
  <%= link_to "Schedule a New Workout", new_workout_path %><br><br>
<% end %>

<% @workouts.each do |workout| %>
  <ul>
    <li>
      <%= link_to "#{workout.date_pretty}", workout_path(workout) %>
      <%= link_to "Edit", edit_workout_path(workout) if current_user.is_coach? %>
    </li>
  </ul>
<% end %>

<h3>Coach: <%= @coach.name %></h3>
<h3>Athletes:</h3>
<ul>
  <% @athletes.each do |a| %>
    <li><%= a.name %></li>
  <% end %>
</ul>

<% if current_user.is_coach? %>
  <%= link_to "Invite Athlete to Join", new_team_invite_path %>
  <% if @team.team_invites.any? %>
    <h3>Pending Invites:</h3>
    <ul>
      <% @team.team_invites.each do |invite| %>
        <li><%= link_to invite.user.name, team_invite_path(invite) %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

