<div class="workout-card" %>
  <div class="card-left">
    <h5><%= workout.today_or_day %></h5>
    <h6><%= workout.date_short %> - <%= workout.categories %></h6>
  </div>
  <div class="card-right">
    <div class="inline">
      <div class="inline icon-arrow-right"></div><h5 class="inline">Go to Workout</h5>
    </div>
    <br>
    <% if current_user.is_coach? %>
      <div class="card-coach-buttons">
        <%= link_to "Edit", edit_workout_path(workout), class: "card-btn edit-btn" %>
        <%= link_to "Delete", delete_workout_path(workout), class: "card-btn delete-btn" %>
      </div>
    <% end %>
  </div>
</div>